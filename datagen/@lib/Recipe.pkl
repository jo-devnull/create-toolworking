abstract class Recipe {
  type: String
  category: String = "misc"
  show_notification: Boolean = false
}

class RecipeOutput {
  item: String
  count: Int = 1
  chance: Float? = null
}

class IIngredient {
  item: String? = null
  tag: String? = null
  fluid: String? = null
  amount: Int? = null
}

class Empty extends Recipe {
  type = "notreepunching:empty"
}

class Shapeless extends Recipe {
  type = "minecraft:crafting_shapeless"
  ingredients: Listing
  result: RecipeOutput
}

class Shaped extends Recipe {
  type = "minecraft:crafting_shaped"
  key: Dynamic | Mapping<String, Any> = new {}
  pattern: Listing<String> | List<String> = new {}
  result: RecipeOutput
}

class Forging extends Recipe {
  type = "overgeared:forging"
  hammering: Int
  has_polishing: Boolean = false
  has_quality: Boolean = false
  need_quenching: Boolean = false
  needs_minigame: Boolean = false
  tier: String
  key: Dynamic | Mapping<String, Any>
  pattern: List<String> | Listing<String> = new {}
  result: RecipeOutput
}

abstract class BasinRecipe extends Recipe {
  heatRequirement: "none" | "heated" | "superheated" = "none"
  ingredients: Listing
  results: Listing<RecipeOutput>
  processingTime: Int = 120
}

class Mixing extends BasinRecipe { type = "create:mixing" }
class Milling extends BasinRecipe { type = "create:milling" }
class Pressing extends BasinRecipe { type = "create:pressing" }
